<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div class="d-flex">
    <a class="navbar-brand" href="#">
      <%= image_tag(asset_path('logo_v4.jpg'), class: "avatar") %>
    </a>
    <%= render 'components/searchbar' %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"><
    </button>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <% if signed_in? && current_user.instructor? %>
          <%= link_to "Go to future lessons", class:"nav-link text-white" %>
        <% else %>
          <%= link_to "Become an instructor", new_skill_path, class:"nav-link text-white" %>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "My bookings", bookings_path, :class => "nav-link text-white" %>
      </li>
      <li class="nav-item">
        <a class="nav-link text-white" href="#">Help</a>
      </li>
      <li class="nav-item dropdown">
        <% if signed_in? %>
          <% if current_user.photo.present? %>
            <%= cl_image_tag current_user.photo.url, class: "avatar" %>
            <% else %>
              <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="http://catchingfire.ca/wp-content/uploads/2016/09/question-mark-square-01.png" />
          <% end %>
        <% else %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="http://catchingfire.ca/wp-content/uploads/2016/09/question-mark-square-01.png" />
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <% if signed_in? %>
          <a class="dropdown-item" href="#">Profile</a>
          <a class="dropdown-item" href="#">Account</a>
          <a class="dropdown-item" href="#">Log Out</a>
        <% else %>

        <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
