          </div>
          <div class="col-3 mx-auto mt-5">
            <img class="avatar-x-large mb-2" alt="avatar-x-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
            <p class="text-primary">Samuel L. Jackson</p>
          </div>
        </div>
      </div>
      <div class="flat-show-card">
        <div class="row d-flex mx-0">
          <h2>320 Reviews</h2>
          <p class="mt-2 ml-3"><%= render 'components/star_rating' %></p>
        </div>
        <%= render 'components/review' %>
        <%= render 'components/review' %>
        <%= render 'components/review' %>
      </div>
    </div>
    <div class="col-4">
      <div class="flat-show-card p-4 sticky">
        <span><h2>US $ 101</h2></span>
        <p>per hour</p>
        <p class=""><%= render 'components/star_rating' %>
        <form action="">
          <div class="input-group">
            <p class="input-group-addon" id="basic-addon1">Date:</p>
            <input type="date" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <p class="input-group-addon" id="basic-addon1">Number of hours:</p>
            <input type="Number" class="form-control" placeholder="2" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-gradient mt-2" style="width: 100%">
        </form>
      </div>
    </div>
  </div>
</div>

