<%= render 'components/banner' %>

<div class="container-fluid container-wide">

  <div class="row mt-5 mx-1 mt-2">
    <h3>Featured Lessons</h3>
  </div>
  <div id="carouselExampleControls" class="carousel slide" data-interval="false">
    <div class="carousel-inner carousel-container">
      <% @skills.each_slice(3) do |group| %>
      <div class="carousel-item <%= 'active' if group.include?(@skills.first) %>">
        <div class="row my-3">
          <% group.each do |skill| %>
          <div class="col-4">
            <%= render 'components/card_landscape', skill: skill %>
          </div>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
    <a class="d-flex justify-content-start" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-button-left"><</span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="d-flex justify-content-end" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-button-right">></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="row mt-5 mx-1 my-2">
    <h3>Popular lessons by location</h3>
  </div>
  <div>
    <div class="row my-3">
      <% @locations.each do |location_with_skill| %>
        <div class="col-3">
          <%= render 'components/card_portrait', location_with_skill: location_with_skill %>
        </div>
      <% end %>
    </div>
  </div>




