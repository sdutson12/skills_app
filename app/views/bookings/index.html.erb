<div class="container-medium" style="margin-top: 100px;">
  <h1 class="my-3"><strong>Your Bookings</strong></h1>
  <h3 class="my-4">Upcoming lessons</h3>
  <div class="mb-3">
    <% @bookings.each do |booking| %>
      <% unless booking.date.past?  %>
        <%= render 'components/booking', booking: booking %>
      <% end %>
    <% end  %>
  </div>
  <h3 class="mt-5 mb-2">Past lessons</h3>
  <div class="row justify-content-start mt-4">
    <% @bookings.each do |booking|  %>
      <% if booking.date.past?  %>
        <div class="col-4">
          <%= render 'components/card_landscape_booking', booking: booking %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


